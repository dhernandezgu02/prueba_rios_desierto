# Configuración de Django
DEBUG=True
SECRET_KEY=django-insecure-rios-desierto-sistema-clientes-2025-change-in-production

# Configuración de Base de Datos SQLite - Rios del desierto
DB_NAME=rios_del_desierto.sqlite3
DB_ENGINE=django.db.backends.sqlite3

# Configuración de la aplicación
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuración de zona horaria (Colombia)
TIME_ZONE=America/Bogota
LANGUAGE_CODE=es-co

# URLs permitidos para CORS (cuando agregues frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configuración de archivos estáticos y media
STATIC_URL=/static/
MEDIA_URL=/media/

# Configuración para desarrollo
USE_TZ=True
USE_I18N=True